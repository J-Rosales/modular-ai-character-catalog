{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/index.schema.json",
  "title": "Character catalogue index",
  "type": "object",
  "additionalProperties": false,
  "required": ["siteTitle", "entries"],
  "properties": {
    "siteTitle": {
      "type": "string",
      "minLength": 1
    },
    "entries": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "slug",
          "name",
          "description",
          "tags",
          "featured",
          "lastUpdated",
          "author",
          "tokenCount",
          "redistribution",
          "source",
          "dataPath"
        ],
        "properties": {
          "slug": {
            "type": "string",
            "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
          },
          "name": {
            "type": "string",
            "minLength": 1
          },
          "description": {
            "type": "string",
            "minLength": 1
          },
          "tags": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 1
            },
            "uniqueItems": true
          },
          "featured": {
            "type": "boolean"
          },
          "lastUpdated": {
            "type": "string",
            "format": "date"
          },
          "author": {
            "type": "object",
            "additionalProperties": false,
            "required": ["name"],
            "properties": {
              "name": {
                "type": "string",
                "minLength": 1
              },
              "url": {
                "type": "string",
                "format": "uri"
              }
            }
          },
          "tokenCount": {
            "type": "integer",
            "minimum": 0
          },
          "redistribution": {
            "type": "object",
            "additionalProperties": false,
            "required": ["status"],
            "properties": {
              "status": {
                "type": "string",
                "enum": ["allowed", "conditional", "disallowed", "unknown"],
                "default": "unknown"
              },
              "notes": {
                "type": "string"
              }
            }
          },
          "source": {
            "type": "object",
            "additionalProperties": false,
            "required": ["url", "label"],
            "properties": {
              "url": {
                "type": "string",
                "format": "uri"
              },
              "label": {
                "type": "string",
                "minLength": 1
              },
              "site": {
                "type": "string"
              }
            }
          },
          "dataPath": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    }
  }
}
