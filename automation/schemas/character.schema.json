{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/character.schema.json",
  "title": "Character definition",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "slug",
    "name",
    "description",
    "tags",
    "featured",
    "lastUpdated",
    "author",
    "tokenCount",
    "redistribution",
    "provenance",
    "modules",
    "transforms",
    "manifest"
  ],
  "properties": {
    "slug": {
      "type": "string",
      "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "minLength": 1
    },
    "tags": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      },
      "uniqueItems": true
    },
    "featured": {
      "type": "boolean"
    },
    "lastUpdated": {
      "type": "string",
      "format": "date"
    },
    "author": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "url": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "tokenCount": {
      "type": "integer",
      "minimum": 0
    },
    "redistribution": {
      "type": "object",
      "additionalProperties": false,
      "required": ["status"],
      "properties": {
        "status": {
          "type": "string",
          "enum": ["allowed", "conditional", "disallowed", "unknown"],
          "default": "unknown"
        },
        "notes": {
          "type": "string"
        }
      }
    },
    "provenance": {
      "type": "object",
      "additionalProperties": false,
      "required": ["original", "attribution"],
      "properties": {
        "original": {
          "type": "object",
          "additionalProperties": false,
          "required": ["url", "label"],
          "properties": {
            "url": {
              "type": "string",
              "format": "uri"
            },
            "label": {
              "type": "string",
              "minLength": 1
            },
            "site": {
              "type": "string"
            }
          }
        },
        "backup": {
          "type": ["object", "null"],
          "additionalProperties": false,
          "required": ["url", "label"],
          "properties": {
            "url": {
              "type": "string",
              "format": "uri"
            },
            "label": {
              "type": "string",
              "minLength": 1
            },
            "site": {
              "type": "string"
            }
          }
        },
        "attribution": {
          "type": "object",
          "additionalProperties": false,
          "required": ["authorName", "sourceSite"],
          "properties": {
            "authorName": {
              "type": "string",
              "minLength": 1
            },
            "sourceSite": {
              "type": "string",
              "minLength": 1
            },
            "displayText": {
              "type": "string",
              "minLength": 1,
              "description": "Use phrasing like: rewritten or inspired by {author name} ({source website})."
            }
          }
        },
        "notes": {
          "type": "string"
        }
      }
    },
    "modules": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "label", "type"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9]+(?:_[a-z0-9]+)*$"
          },
          "label": {
            "type": "string",
            "minLength": 1
          },
          "type": {
            "type": "string",
            "enum": ["required", "toggle", "oneOf"]
          },
          "defaultEnabled": {
            "type": "boolean"
          },
          "group": {
            "type": "string"
          },
          "option": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        }
      }
    },
    "transforms": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "label", "kind"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
          },
          "label": {
            "type": "string",
            "minLength": 1
          },
          "kind": {
            "type": "string",
            "enum": ["presentation", "schema", "style"]
          },
          "description": {
            "type": "string"
          }
        }
      }
    },
    "manifest": {
      "type": "object",
      "additionalProperties": false,
      "required": ["fragments", "modules", "assembly", "outputs"],
      "properties": {
        "fragments": {
          "type": "object",
          "minProperties": 1,
          "additionalProperties": {
            "type": "object",
            "additionalProperties": false,
            "required": ["path", "kind"],
            "properties": {
              "path": {
                "type": "string",
                "minLength": 1
              },
              "kind": {
                "type": "string",
                "enum": [
                  "system",
                  "persona",
                  "scenario",
                  "greeting",
                  "example",
                  "lore",
                  "metadata",
                  "other"
                ]
              },
              "tokenCount": {
                "type": "integer",
                "minimum": 0
              }
            }
          }
        },
        "modules": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["id", "fragmentRefs"],
            "properties": {
              "id": {
                "type": "string"
              },
              "fragmentRefs": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "string"
                },
                "uniqueItems": true
              }
            }
          }
        },
        "assembly": {
          "type": "object",
          "additionalProperties": false,
          "required": ["sequence", "separator"],
          "properties": {
            "sequence": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "object",
                "additionalProperties": false,
                "required": ["fragment"],
                "properties": {
                  "fragment": {
                    "type": "string"
                  },
                  "required": {
                    "type": "boolean",
                    "default": true
                  }
                }
              }
            },
            "separator": {
              "type": "string"
            }
          }
        },
        "outputs": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "output-manifest.schema.json"
          }
        }
      }
    }
  }
}
